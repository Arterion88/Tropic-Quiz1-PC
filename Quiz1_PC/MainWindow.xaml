<Window x:Class="Quiz1_PC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quiz1_PC"
        xmlns:properties="clr-namespace:Quiz1_PC.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:GlobalStrings.AppName}" Height="450" Width="800">
    <Grid>
        <Image Stretch="UniformToFill" Source="background_lake.jpg"/>
        <Grid Height="45"  VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
            <Button Name="btnStart" Content="Start" VerticalAlignment="Center" Width="75" Grid.Column="0"/>
            <ComboBox Name="cmbLanguages" HorizontalAlignment="Right"  Width="197" Margin="0,12,43,11" DropDownClosed="CmbLanguages_DropDownClosed" />
        </Grid>


    </Grid>
</Window>
